<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.cortek.calcuthebook.PickBookFragment"
    android:weightSum="1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book1"
                        android:id="@+id/cb1"
                        android:checked="false"

                        android:layout_alignParentLeft="true" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book5"
                        android:id="@+id/cb5"
                        android:checked="false"
                        android:layout_below="@+id/cb1"
                        android:layout_alignParentLeft="true" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book9"
                        android:id="@+id/cb9"
                        android:checked="false"
                        android:layout_below="@+id/cb5"
                        android:layout_alignParentLeft="true" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book13"
                        android:id="@+id/cb13"
                        android:checked="false"
                        android:layout_below="@+id/cb9"
                        android:layout_alignParentLeft="true" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book17"
                        android:id="@+id/cb17"
                        android:checked="false"
                        android:layout_below="@+id/cb13"
                        android:layout_alignParentLeft="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book2"
                    android:id="@+id/cb2"
                    android:checked="false"

                    android:layout_alignLeft="@+id/cb6" />

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book6"
                    android:id="@+id/cb6"
                    android:checked="false"
                    android:layout_below="@+id/cb2"
                    android:layout_alignParentLeft="true"/>

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book10"
                    android:id="@+id/cb10"
                    android:checked="false"
                    android:layout_below="@+id/cb6"
                    android:layout_alignParentLeft="true" />

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book14"
                    android:id="@+id/cb14"
                    android:checked="false"
                    android:layout_below="@+id/cb10"
                    android:layout_alignParentLeft="true"/>

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book18"
                    android:id="@+id/cb18"
                    android:checked="false"
                    android:layout_below="@+id/cb14"
                    android:layout_alignParentLeft="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book3"
                    android:id="@+id/cb3"
                    android:checked="false"

                    android:layout_alignLeft="@+id/cb7" />

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book7"
                    android:id="@+id/cb7"
                    android:checked="false"
                    android:layout_below="@+id/cb3"
                    android:layout_alignLeft="@+id/cb11" />

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book11"
                    android:id="@+id/cb11"
                    android:checked="false"
                    android:layout_below="@id/cb7"
                    android:layout_alignParentRight="true" />

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book15"
                    android:id="@+id/cb15"
                    android:checked="false"
                    android:layout_below="@id/cb11"
                    android:layout_alignParentRight="true" />

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book19"
                    android:id="@+id/cb19"
                    android:checked="false"
                    android:layout_below="@id/cb15"
                    android:layout_alignParentRight="true"  />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book4"
                    android:id="@+id/cb4"
                    android:checked="false"

                    android:layout_alignLeft="@+id/cb8" />

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book8"
                    android:id="@+id/cb8"
                    android:checked="false"
                    android:layout_below="@+id/cb4" />

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book12"
                    android:id="@+id/cb12"
                    android:checked="false"
                    android:layout_below="@+id/cb8"
                    android:layout_alignParentRight="true"/>

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book16"
                    android:id="@+id/cb16"
                    android:checked="false"
                    android:layout_below="@+id/cb12"
                    android:layout_alignParentRight="true" />

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book20"
                    android:id="@+id/cb20"
                    android:checked="false"
                    android:layout_below="@+id/cb16"
                    android:layout_alignParentRight="true" />

                    <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AOR_check_all"
                    android:id="@+id/cbAllOrReset"
                    android:checked="false"
                    android:layout_below="@id/cb20"
                    android:layout_alignRight="@+id/cb20" />
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listView"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:focusable="false"
                android:stackFromBottom="false"
                android:transcriptMode="alwaysScroll" />
        </LinearLayout>
    </ScrollView>


    <TextView
        android:text="@string/hello_world"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_weight="1" />

</LinearLayout>